<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
    <title>Document</title>
</head>
<body>

    <div class="d-flex flex-row">
        <div class="header p-2 flex-grow-1 ">
            <h1>TINTY URL.COM</h1>
        </div>
        <div>
            <ul class="d-flex flex-row bg-primary">
                <form action="/login" method="post"><button class="btn btn-primary" type="submit">Login</button></form>
                
                <form action="/signup" method="post"><button class="btn btn-primary" type="submit">SignUp</button></form>

                <form action="/features" method="post"><button class="btn btn-primary" type="submit">Features</button></form>
            </ul>
        </div>
    </div>
    <div class="container">

        <h1>Url tiny</h1>
        <form action="/shortUrls" method="post" class="my-2 form-inline">
            <label for="fullUrl" class="sr-only">Url</label>
            <input type="url" name="fullUrl"id="fullUrl" placeholder="Url" class="form-control col me-2">
            <button class="btn btn-success" type="submit">Submit</button>
        </form>
        <table class="table table-striped table-responsive ">
            <thead>
                <tr>
                    <td>Full Url</td>
                    <td>Shortened Url</td>
                    <td>Clicks</td>
                </tr>

            </thead>
            <tbody>
                <%
                shortUrlGot.forEach(shortUrl => {%>
                    <tr>
                        <td><a href="<%=shortUrl.full%>"><%=shortUrl.full%></a>
                        </td>
                        <td><a href="<%=shortUrl.short%>"><%=shortUrl.short%></a></td>
                        <td><%=shortUrl.click%></td>
                    </tr>  
                <%
                });
                
                %>
            </tbody>
        </table>
    </div>
</body>
</html>